<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Movietail" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="GradientFabRed" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_height">@dimen/fab_size</item>
        <item name="android:layout_width">@dimen/fab_size</item>
        <item name="android:elevation">@dimen/fab_elevation</item>
        <item name="android:background">@drawable/floating_background</item>
    </style>

    <dimen name="fab_size">54dp</dimen>
    <dimen name="fab_elevation">15dp</dimen>
</resources>